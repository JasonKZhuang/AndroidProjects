<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/friend_item_root"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
    <CheckBox
        android:id="@+id/friend_item_ckb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="true"/>
    <ImageView
        android:id="@+id/friend_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/friend_s_photo"
        android:src="@mipmap/ic_launcher"
        />
    <LinearLayout
        android:id="@+id/friend_item_root_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/friend_item_id"
            android:layout_width="100dp"
            android:visibility="invisible"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/friend_item_name"
            style="@style/FriendItemTextView"
            />

        <TextView
            android:id="@+id/friend_item_email"
            style="@style/FriendItemTextView"
            />

        <TextView
            android:id="@+id/friend_item_birthday"
            style="@style/FriendItemTextView"
            />

    </LinearLayout>


</LinearLayout>
